<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#342B49"

    >

    <ImageView
        android:id="@+id/nearby_back_btn"
        android:layout_width="99dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/back_button" />

    <TextView
        android:id="@+id/nearby_heading"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/nearby_back_btn"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Nearby QRcodes"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="25sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="569dp"
        android:layout_below="@+id/nearby_heading"
        android:layout_marginBottom="80dp"
        android:background="#77F1E8FF">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="391dp"
                android:layout_height="91dp">

                <LinearLayout
                    android:layout_width="102dp"
                    android:layout_height="142dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/nearby_image_1"
                        android:layout_width="match_parent"
                        android:layout_height="111dp"
                        app:srcCompat="@drawable/qr_code" />

                    <TextView
                        android:id="@+id/nearby_location_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="location 1"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="102dp"
                    android:layout_height="142dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/nearby_image_2"
                        android:layout_width="match_parent"
                        android:layout_height="111dp"
                        app:srcCompat="@drawable/qr_code" />

                    <TextView
                        android:id="@+id/nearby_location_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="location 2"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="102dp"
                    android:layout_height="142dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/nearby_image_3"
                        android:layout_width="match_parent"
                        android:layout_height="111dp"
                        app:srcCompat="@drawable/qr_code" />

                    <TextView
                        android:id="@+id/nearby_location_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="location 3"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="102dp"
                    android:layout_height="142dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/nearby_image_4"
                        android:layout_width="match_parent"
                        android:layout_height="111dp"
                        app:srcCompat="@drawable/qr_code" />

                    <TextView
                        android:id="@+id/nearby_location_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="location 4"
                        android:gravity="center"/>
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="130dp">

                <LinearLayout
                    android:layout_width="102dp"
                    android:layout_height="142dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/nearby_image_5"
                        android:layout_width="match_parent"
                        android:layout_height="111dp"
                        app:srcCompat="@drawable/qr_code" />

                    <TextView
                        android:id="@+id/nearby_location_5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="location 5"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="102dp"
                    android:layout_height="142dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/nearby_image_6"
                        android:layout_width="match_parent"
                        android:layout_height="111dp"
                        app:srcCompat="@drawable/qr_code" />

                    <TextView
                        android:id="@+id/nearby_location_6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="location 6"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="102dp"
                    android:layout_height="142dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/nearby_image_7"
                        android:layout_width="match_parent"
                        android:layout_height="111dp"
                        app:srcCompat="@drawable/qr_code" />

                    <TextView
                        android:id="@+id/nearby_location_7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="location 7"
                        android:gravity="center"/>
                </LinearLayout>



            </TableRow>

        </TableLayout>


    </RelativeLayout>
</RelativeLayout>
