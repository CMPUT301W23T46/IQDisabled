<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_fragment_by_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#342B49">


    <TextView
        android:id="@+id/search_fragment_username"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"

        android:layout_marginStart="68dp"
        android:layout_marginLeft="50dp"

        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp"
        android:text="Username: "
        android:textSize="25sp">

    </TextView>

    <EditText
        android:id="@+id/search_fragment_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="40dp"
        android:layout_toEndOf="@id/search_fragment_username"
        android:hint="Username"
        android:textSize="25sp">

    </EditText>

    <Button
        android:id="@+id/search_fragment_add_btn"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_fragment_username"
        android:layout_alignLeft="@id/search_fragment_username"
        android:layout_marginLeft="8dp"

        android:text="Add"
        android:textSize="20sp">

    </Button>

    <Button
        android:id="@+id/search_fragment_cancel_btn"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_fragment_username"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@id/search_fragment_add_btn"
        android:text="Cancel"
        android:textSize="20sp">

    </Button>



</RelativeLayout>