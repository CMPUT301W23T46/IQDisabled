<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_fragment_by_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#342B49">


    <TextView
        android:id="@+id/search_fragment_username"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"

        android:layout_marginStart="18dp"



        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:text="Username: "
        android:textSize="17sp">

    </TextView>

    <EditText
        android:id="@+id/search_fragment_name_input"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="40dp"
        android:layout_toEndOf="@id/search_fragment_username"
        android:hint="username"
        android:textSize="17sp">

    </EditText>

    <Button
        android:id="@+id/search_by_name_cancel_btn"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_fragment_username"



        android:layout_marginStart="40dp"

        android:text="Cancel"
        android:textSize="18sp">

    </Button>

    <Button
        android:id="@+id/search_by_name_add_btn"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_fragment_username"

        android:layout_marginStart="20dp"

        android:layout_toEndOf="@id/search_by_name_cancel_btn"
        android:text="Add"
        android:textSize="18sp">

    </Button>



</RelativeLayout>