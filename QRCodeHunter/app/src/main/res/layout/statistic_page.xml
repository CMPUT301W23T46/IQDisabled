<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#342B49">

    <TextView
        android:id="@+id/statistics_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="35dp"
        android:fontFamily="sans-serif-thin"
        android:text="Statistics"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textStyle="bold" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/input_layout"
        android:layout_marginTop="10dp"
        android:layout_below="@id/statistics_text"
        android:layout_above="@id/nav_view"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">




                <TextView
                    android:id="@+id/highest_scoring_qr_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Highest scoring QR code:"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginBottom="35dp"
                    android:fontFamily="sans-serif-thin"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal">


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/icon" />


                    <TextView
                        android:id="@+id/highest_score_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12345"
                        android:textColor="@color/white"

                        />
                </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/lowest_scoring_qr_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lighest scoring QR code:"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="35dp"
            android:fontFamily="sans-serif-thin"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/total_number_qr_codes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Number of QR Codes:"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="35dp"
            android:fontFamily="sans-serif-thin"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/sum_of_scoring_of_qr_codes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sum of Scores of QR Codes:"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="35dp"
            android:fontFamily="sans-serif-thin"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />


    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_alignParentBottom="true"
        android:background="#43365A" >


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5A487A"

            android:orientation="horizontal">

            <Button
                android:id="@+id/bottom_button_1"
                android:layout_width="55pt"
                android:layout_height="25pt"
                android:backgroundTint="#977DC5"
                android:layout_marginRight="13dp"
                android:theme="@style/Theme.AppCompat.DayNight"
                android:text="Statistics"
                android:textSize="15dp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/bottm_button_2"
                android:layout_width="55pt"
                android:layout_height="25pt"
                android:theme="@style/Theme.AppCompat.DayNight"
                android:backgroundTint="#977DC5"
                android:text="Ranking"
                android:textSize="15dp"
                android:layout_marginRight="13dp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/bottom_button_3"
                android:layout_width="55pt"
                android:layout_height="25pt"

                android:theme="@style/Theme.AppCompat.DayNight"
                android:backgroundTint="#977DC5"
                android:text="Remove"
                android:textSize="15dp"
                android:textColor="@color/white"/>




        </androidx.appcompat.widget.LinearLayoutCompat>



    </com.google.android.material.bottomnavigation.BottomNavigationView>















</RelativeLayout>







