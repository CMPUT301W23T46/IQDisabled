<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#342B49">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/imageButton14"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/customer_review"
                android:background="#342B49"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <ImageButton
                android:id="@+id/home_search_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:background="#342B49"
                android:paddingRight="0dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/magnifier"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/notification_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-thin"
            android:text="Notification"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_marginTop="50dp"/>

        <Button
            android:id="@+id/view_qr_codes_main_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View QR Codes"
            android:backgroundTint="#77F1E8FF"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:padding="30dp"
            android:layout_marginTop="150dp"
            />





    </LinearLayout>








    <LinearLayout
        android:id="@+id/button_view_include"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <include layout="@layout/bottom_bar" />
    </LinearLayout>




</RelativeLayout>